<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LandActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="LeCalendarTheme.AppCompat" parent="@style/Theme.AppCompat.Zui.NoActionBar">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor">#ffffff</item>
    </style>
    <style name="AppBaseTheme" parent="Theme.AppCompat.Zui.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:navigationBarColor">@color/background_zui</item>

    </style>
    <style name="Theme.Zui.MessageDialog" parent="Theme.Zui.Dialog.BaseAlert">
        <item name="android:windowTitleStyle">@style/TextAppearance.Zui.DialogWindowTitle</item>
        <item name="android:subtitleTextStyle">@style/TextAppearance.Zui.Subhead</item>
        <item name="android:titleTextColor" tools:ignore="NewApi">@color/text_title_dialog_zui</item>
        <item name="android:subtitleTextColor" tools:ignore="NewApi">@color/text_body_dialog_zui</item>
        <item name="android:textColorHint">@color/message_dialog_editor_hint_text_color</item>
        <item name="android:windowAnimationStyle">@style/Animation.Zui.Dialog</item>
    </style>

    <style name="LeCalendarTheme" parent="@style/AppBaseTheme">
    </style>
    <style name="LeCalendarTheme.NoTitle">
    </style>

    <style name="LeCalendarTheme.NoTitle.AllInOne">
    </style>
</resources>